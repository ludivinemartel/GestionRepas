{% extends 'base.html.twig' %} {% block title %}Repas{% endblock %} {% block
body %}
<h1>{{ meal.Name }}</h1>

<table class="table">
	<tbody>
		<tr>
			<th>Préparation</th>
			<td>{{ meal.Description }}</td>
		</tr>
		<tr>
			<th>Photo</th>
			<td>
				{% if meal.imageName %}
				<img
					src="{{ asset('images/meal/' ~ meal.imageName) }}"
					alt="{{ meal.name }}"
					style="max-width: 100px; max-height: 100px"
				/>
				{% else %} Pas d'image {% endif %}
			</td>
		</tr>
		<tr>
			<th>Kcal</th>
			<td>{{ meal.Kcal is not null ? meal.Kcal : 'N/A' }}</td>
		</tr>
		<tr>
			<th>Lipide</th>
			<td>{{ meal.Lipide is not null ? meal.Lipide : 'N/A' }}</td>
		</tr>
		<tr>
			<th>Glucide</th>
			<td>{{ meal.Glucide is not null ? meal.Glucide : 'N/A' }}</td>
		</tr>
		<tr>
			<th>Protéine</th>
			<td>{{ meal.Proteine is not null ? meal.Proteine : 'N/A' }}</td>
		</tr>
		<tr>
			<th>Nombre de personnes</th>
			<td>{{ meal.NbPersonne }}</td>
		</tr>
		<tr>
			<th>Temps de préparation</th>
			<td>{{ meal.time }} minutes</td>
		</tr>
		<tr>
			<th>Ingrédients</th>
			<td>
				<ul>
					{% for ingredient in meal.Ingredients %}
					<li>
						{{ ingredient.name }} - {{ ingredient.quantity }}
						{{ ingredient.mesure }}
					</li>
					{% endfor %}
				</ul>
			</td>
		</tr>
	</tbody>
</table>

<a href="{{ path('app_meal_index') }}">Retour à la liste</a>
<a href="{{ path('app_meal_edit', { id: meal.id }) }}">Modifier</a>
{{ include("meal/_delete_form.html.twig") }}
{% endblock %}
