{% extends 'base.html.twig' %}

{% block title %}PantryItem index{% endblock %}

{% block body %}
    <h1>PantryItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Measure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pantry_item in pantry_items %}
            <tr>
                <td>{{ pantry_item.id }}</td>
                <td>{{ pantry_item.name }}</td>
                <td>{{ pantry_item.quantity }}</td>
                <td>{{ pantry_item.measure }}</td>
                <td>
                    <a href="{{ path('app_pantry_item_show', {'id': pantry_item.id}) }}">show</a>
                    <a href="{{ path('app_pantry_item_edit', {'id': pantry_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pantry_item_new') }}">Create new</a>
{% endblock %}
