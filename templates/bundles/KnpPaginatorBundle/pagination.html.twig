{% block pagination %} {% if pageCount > 1 %}
<nav>
	<ul class="pagination justify-content-center">
		{% if previous is defined %}
		<li class="page-item">
			<a
				class="page-link"
				href="{{ path(route, query|merge({(pageParameterName): previous})) }}"
				aria-label="Previous"
			>
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		{% else %}
		<li class="page-item disabled">
			<span class="page-link">&laquo;</span>
		</li>
		{% endif %} {% for page in pagesInRange %} {% if page != current %}
		<li class="page-item">
			<a
				class="page-link"
				href="{{ path(route, query|merge({(pageParameterName): page})) }}"
				>{{ page }}</a
			>
		</li>
		{% else %}
		<li class="page-item active">
			<span class="page-link">{{ page }}</span>
		</li>
		{% endif %} {% endfor %} {% if next is defined %}
		<li class="page-item">
			<a
				class="page-link"
				href="{{ path(route, query|merge({(pageParameterName): next})) }}"
				aria-label="Next"
			>
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
		{% else %}
		<li class="page-item disabled">
			<span class="page-link">&raquo;</span>
		</li>
		{% endif %}
	</ul>
</nav>
{% endif %} {% endblock %}
