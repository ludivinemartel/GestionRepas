{% extends 'base.html.twig' %} {% block title %}Liste de courses{% endblock %}
{% block body %}
<div class="container">
	<h1>Liste de courses</h1>
	<h4>Du {{ weekStart|date('d/m/Y') }} au {{ weekEnd|date('d/m/Y') }}</h4>
	<form>
		<ul class="list-group">
			{% for ingredient in ingredients %}
			<li class="list-group-item">
				<div class="form-check">
					<input
						class="form-check-input"
						type="checkbox"
						value=""
						id="ingredient_{{ loop.index }}"
					/>
					<label class="form-check-label" for="ingredient_{{ loop.index }}">
						{{ ingredient.quantity }} {{ ingredient.measure }} de
						{{ ingredient.name }}
					</label>
				</div>
			</li>
			{% endfor %}
		</ul>
	</form>

	<a
		href="{{ path('app_generate_shopping_list_pdf', { id: weeklyMeal.id }) }}"
		class="btn btn-primary mt-3"
		>Télécharger la liste de courses en PDF</a
	>

	<a
		href="{{ path('app_show_weekly_menu_detail', { id: weeklyMeal.id }) }}"
		class="btn btn-secondary mt-3"
		>Retour au menu</a
	>
</div>
{% endblock %}
